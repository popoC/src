<!-- usb_cam_opencv.launch-->
<launch>
   <!-- USB camera -->
  <node pkg="usb_cam" type="usb_cam_node" name="usb_cam">
  <param name="video_device" value="/dev/video1" />
  <param name="image_width" value = "1920"   />
  <param name="image_height" value = "1080"   />
  <param name="pixel_format" value = "mjpeg"   />
  </node>
  
  <!-- image overlay node -->
  <node pkg="opencv_po_tx1" type="opencv_overlay" name="img_overlay" output="screen">
  </node>
  
   <!-- USB camera 2-->
  <node pkg="usb_cam" type="usb_cam_node" name="usb_cam_2">
  <param name="video_device" value="/dev/video2" />
  <param name="image_width" value = "1280"   />
  <param name="image_height" value = "720"   />
  <param name="pixel_format" value = "mjpeg"   />
  <param name="io_method" value="mmap"/>
  </node>
  
  <!-- image overlay node -->
  <node pkg="opencv_po_tx1" type="opencv_edge_node_tx1" name="node_tx1" output="screen">


  </node>
</launch>
